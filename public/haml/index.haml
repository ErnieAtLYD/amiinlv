%html.no-js{:lang => "en"}
  %head
    %meta{ :charset => "utf-8" }/
    %meta{ "http-equiv" => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }

    %title Am I In Las Vegas?

    %meta{ :name => "description", :content => "" }/
    %meta{ :name => "viewport",    :content => "width=device-width, initial-scale=1.0" }

    %link{ :href => "css/application.css", :rel => "stylesheet" }

    %link{ :href => "http://cdn.leafletjs.com/leaflet-0.5/leaflet.css", :rel => "stylesheet" }
    -# <!--[if lte IE 8]> 
      %link{ :href => "http://cdn.leafletjs.com/leaflet-0.5/leaflet.ie.css", :rel => "stylesheet" }
      <![endif]-->
    %link{ :href => "http://libs.cartocdn.com/cartodb.js/v2/themes/css/cartodb.css", :rel => "stylesheet" }
    -# <!--[if lte IE 8]> 
      %link{ :href => "http://libs.cartocdn.com/cartodb.js/v2/themes/css/cartodb.ie.css", :rel => "stylesheet" }
      <![endif]-->

    %script{ :src => "js/polyfills.js" }

  %body
    #main{ :role => "main" }
      #ribbon

        #alert

        #question
          %h1 Am I in Las Vegas?
          %form
            %div{ :class => "input-append input-prepend" }
              %a#input-target.btn{:href => "#"}
                %img{:src => "img/target.png"}/
              %input#input-location{:placeholder => "495 S. Las Vegas Blvd, Las Vegas NV", :type => "text", :class => "input-xxlarge" }/
              %a#input-go.btn{:href => "#"} Go

        %section#pi
          %a{:href => "https://github.com/codeforamerica/amiinlv/", :target => "_blank"}
            %img{:alt => "Code for America flag", :src => "img/cfa_flag.png"}/

        #answer

      #marker
        %object#marker-svg{:data => "img/marker.svg", :type => "image/svg+xml"}
          %img{:alt => "marker", :height => "350", :src => "img/marker.png", :width => "210"}/

      #map

    // Templates

    %script{ :id => "alert", :type => "text/html" }
      %button{ :type => "button", :class => "close" }
        &times;
        %span {{ message }}

    %script{ :id => "answer", :type => "text/html" }
      %h1 {{ answer }}

    // Javascripts

    %script{ :src => "//code.jquery.com/jquery-latest.min.js" }
    :javascript
      window.jQuery || document.write('<script src="js/jquery.min.js"><\/script>')
    %script{ :src => "http://libs.cartocdn.com/cartodb.js/v2/cartodb.js" }

    %script{ :src => "js/application.js" }
